	<div class="container">
	  <div class="page-header">
	    
<h1>Listing Expenses</h1>
 </div>
 <div class="jumbotron">

 	<h1>You've <%= Expense.count('description') %> recorded expense(s)</h1><br>
 	<h1>So far you've spent: <%= number_to_currency(Expense.sum('price')) %> </h1><br>
	<br>
	
	<button type = button, class = class: "btn btn-primary"> <%= link_to 'New Expense' , new_expense_path %></button><br>
<table>
  <tr>
    <th>Description</th>
    <th>Price</th>
    <th colspan="3" style="text-align:center">Action</th>
  </tr>


  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.description %></td>
      <td><%= number_to_currency(expense.price) %></td>
      <td><button type = button, class = class: "btn btn-primary"><%= link_to 'Show', expense_path(expense) %></button></td>
      <td><button type = button, class = class: "btn btn-primary"><%= link_to 'Edit', edit_expense_path(expense) %></button></td>
      <td><button type = button, class = class: "btn btn-primary"><%= link_to 'Destroy', 
      expense_path(expense),
      method: :delete,
      data: { confirm: 'You sure?' }
      %></button></td>
      
    </tr>
  <% end %>
  
</table>
</div>
